<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="0dip" />
            <stroke android:width="0dip" android:color="@color/edittextbg_color" />
            <gradient android:angle="-90" android:startColor="@color/edittextbg_color" android:endColor="@color/edittextbg_color"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="0dip" />
            <stroke android:width="0dip" android:color="@color/edittextbg_color" />
            <solid android:color="@color/edittextbg_color"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="0dip" />
            <stroke android:width="0dip" android:color="@color/loginbtn_color" />
            <gradient android:angle="-90" android:startColor="@color/loginbtn_color" android:endColor="@color/loginbtn_color" />
        </shape>
    </item>
</selector>