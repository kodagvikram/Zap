<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bottombackground_color">

    <RelativeLayout
        android:id="@+id/tab_background"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/transprant_color">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/transprant_color">

            <TextView
                android:id="@+id/Sampletext"
                android:layout_width="15dp"
                android:layout_height="2dp"
                android:layout_centerHorizontal="true"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <ImageView
                android:id="@+id/icon"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_below="@+id/Sampletext"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:contentDescription="@string/app_name"
                android:scaleType="centerInside"
                android:src="@drawable/tab_one_active" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_toEndOf="@+id/Sampletext"
                android:layout_toRightOf="@+id/Sampletext"
                android:background="@drawable/green_chat_countbackground"
                android:gravity="center"
                android:padding="1dp"
                android:singleLine="true"
                android:text="@string/st_count"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:visibility="gone" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>